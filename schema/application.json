{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Application",
  "definitions": {
    "Application": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "database": {
          "$ref": "#/definitions/Database"
        },
        "app": {
          "$ref": "#/definitions/App"
        }
      },
      "required": ["app", "database"],
      "title": "Application"
    },
    "App": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        }
      },
      "required": ["host", "port"],
      "title": "App"
    },
    "Database": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["host", "name", "port", "uri"],
      "title": "Database"
    }
  }
}
